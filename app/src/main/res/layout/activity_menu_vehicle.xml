<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.dornier.fuelcarcare.ActivitySelectVehicle">

    <TextView
        android:textColor="#fff"
        android:textAlignment="center"
        android:id="@+id/MenuCarVehicleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cell_layout"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ListView
        android:background="@drawable/cell_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MenuCarListView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/MenuCarVehicleName">
    </ListView>

</RelativeLayout>
